<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    
    <persistence-unit name="ProductSalesDB">
        <description> Persistence unit for Product and Sales </description>

        <provider> org.hibernate.jpa.HibernatePersistenceProvider </provider>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/> <!-- use my sql in database -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/salesandproduct?useLegacyDateTimeCode=false&amp;serverTimezone=Asia/Manila"/> <!-- url for the database -->
            <property name="javax.persistence.jdbc.user" value="salesandproduct"/> <!-- user dont use the root  -->
            <property name="javax.persistence.jdbc.password" value="salesandproductpass"/> <!-- password for database -->
            <property name="hibernate.show_mysql" value="true"/> <!-- if there's error in sql -->
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- auto generate database tables -->
        </properties>
    </persistence-unit>
</persistence>
